<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".SignUpActivity"
    android:background="@drawable/regiaster"
    android:orientation="vertical" android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:backgroundTint="#5E5B47"
    android:backgroundTintMode="screen"
    >


     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:id="@+id/scroll">



         <LinearLayout
             android:layout_width="match_parent"
             android:gravity="center"
             android:orientation="vertical"
             android:layout_height="wrap_content"
             >


             <TextView
                 android:layout_marginTop="20dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="sans-serif-black"
                 android:text="USER REGISTRATION"
                 android:textSize="20dp"
                 android:id="@+id/head"
                 android:gravity="center"
                 />

             <Spinner
                 android:layout_marginTop="20dp"
                 android:id="@+id/userType"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:layout_margin="20dp"

                 ></Spinner>

             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:id="@+id/editName">

                 <android.support.design.widget.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="10dp"
                     android:hint="Name"
                     android:textColorHint="#FFFFFF"
                     android:inputType="text" />


             </android.support.design.widget.TextInputLayout>

             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:id="@+id/editEnrollNo">

                 <android.support.design.widget.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="UID"
                     android:layout_margin="10dp"
                     android:inputType="number" />


             </android.support.design.widget.TextInputLayout>



             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:id="@+id/editCardNo">

                 <android.support.design.widget.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Stream"
                     android:layout_margin="10dp"
                     android:inputType="number" />



             </android.support.design.widget.TextInputLayout>


             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:id="@+id/editID">

                 <android.support.design.widget.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="College Email ID"
                     android:layout_margin="10dp"
                     android:inputType="textEmailAddress" />

             </android.support.design.widget.TextInputLayout>



             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/editPass"
                 android:layout_marginTop="5dp"
                 app:passwordToggleEnabled="true">

                 <android.support.design.widget.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Password"
                     android:layout_margin="10dp"
                     android:inputType="textPassword" />


             </android.support.design.widget.TextInputLayout>


             <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/editPass1"
                 android:layout_marginTop="5dp"
                 app:passwordToggleEnabled="true">

                 <android.support.design.widget.TextInputEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Confirm Password"
                     android:layout_margin="10dp"
                     android:inputType="textPassword" />


             </android.support.design.widget.TextInputLayout>


             <CheckBox
                 android:id="@+id/check1"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="I Agree that the information provided is correct"/>

             <Button
                 android:id="@+id/buttonRegister"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="20dp"
                 android:layout_marginTop="10dp"
                 android:enabled="false"
                 android:text="Register"
                 android:textColor="#000000" />


             <TextView
                 android:id="@+id/toSignIn"
                 android:layout_width="match_parent"
                 android:layout_marginTop="5dp"
                 android:layout_marginBottom="5dp"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 android:textSize="15dp"
                 android:textColor="@color/colorPrimary"
                 android:text="Already Registered ? Sign in " />




</LinearLayout>

 </ScrollView>


</android.support.constraint.ConstraintLayout>